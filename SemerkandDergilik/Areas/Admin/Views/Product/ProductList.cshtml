@{
}

@model ProductVM

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}

<h4 style="color:red;">@TempData["mesaj"] </h4>


@if (Model.Products.Count == 0)
{
    <div class="jumbotron" id="tab1">
        Ürün Eklemek icin
        @* BURASIIII DEĞİLLLL <input type="submit" id="btnIslemYap" value="İşlem Yap" />*@

        @*BURASIIII <button class="btn btn-info " id="addNewCategory" value="addNewCategoryValue">tıklayınız</button>*@
    </div>
}

else
{
    <div id="tab1">
        Ürün Eklemek icin
        @*<button class="btn btn-info " id="addNewCategory" value="addNewCategoryValue">tıklayınız</button>*@
    </div>


    <div class="panel panel-primary">
        <div class="panel panel-body">
            <table class="table table-hover" id="tab2">
                <thead>
                    <tr>
                        <th>Ürün İsmi</th>
                        <th>Ürün Fiyat</th>
                        <th>Ürün Adet</th>
                        <th>İskonto</th>

                        <th>Kategori ID</th>
                        <th>Kategori Adı</th>

                        <th>Durum</th>
                        <th colspan="2" style="padding-left:150px">Ürün Resim</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ProductDTO item in Model.Products)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.UnitsInStock</td>
                            <td>@item.Discount</td>

                            <td>@item.Category.ID</td>
                            <td>@item.Category.CategoryName</td>

                            <td>@item.Status</td>
                            @*<td colspan="2" style="padding-left:150px">@item.CategoryPicture</td>*@
                            <td colspan="2" style="padding-left:150px"><img style="width:150%; height:150%" src="@item.ProductPicture" /></td>
                            <td>
                                @*<a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a>*@
                                @* BURASIIII  <button class="btn btn-warning " id="updateCategory" value="updateCategoryValue" data-id=@item.ID>Güncelle</button>*@
                            </td>
                            <td>
                                @*<a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>*@

                                @* BURASIIII <button class="btn btn-danger " id="deleteCategory" value="deleteCategoryValue" data-id=@item.ID>Sil</button>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
























