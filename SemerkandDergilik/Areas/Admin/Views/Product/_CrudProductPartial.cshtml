@model ProductVM

@if (Model.ProductDTO.ID == 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Ürün Oluşturma Formu</h3>
}
else if (Model.ProductDTO.ID != 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Ürün Güncelleme Formu</h3>
}
else if (Model.ProductDTO.ID != 0 && ViewBag.CRUD == "delete_operation")
{
    <h3>Ürün Silme Formu</h3>
}

<hr />
<div class="row">

    <form asp-action="CRUDProduct" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (ViewBag.CRUD != "delete_operation")
        {
            TempData["Deleted"] = null;  // delete pop-up sayfasını açıp sonra kapatıp sonra da update/add pop'ı seçilirse TempData["Deleted"] sıfırlanmadığından CRUDProduct kısmında delete operation çalışır bu yüzden bunu sıfırlamak lazım


            <div class="form-group">
                <label asp-for="ProductDTO.ProductName" class="control-label"></label>
                <input asp-for="ProductDTO.ProductName" class="form-control" placeholder="Ürün adı giriniz..." />
                <span asp-validation-for="ProductDTO.ProductName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductDTO.UnitPrice" class="control-label"></label>
                        <input asp-for="ProductDTO.UnitPrice" class="form-control" placeholder="Ürün fiyatı giriniz..." />
                        <span asp-validation-for="ProductDTO.UnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductDTO.UnitsInStock" class="control-label" style=" width:100%"></label>
                        <input asp-for="ProductDTO.UnitsInStock" class="form-control" placeholder="Stok sayısı giriniz..." min="0" />
                        <span asp-validation-for="ProductDTO.UnitsInStock" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.Discount" class="control-label"></label>
                <input asp-for="ProductDTO.Discount" class="form-control" min="0" />
                <span asp-validation-for="ProductDTO.Discount" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ProductDTO.CategoryID" />

            @*                <input type="hidden" asp-for="CategoryDTO.ID" />
        <input type="hidden" asp-for="CategoryDTO.CategoryName" />*@


            <div class="form-group">
                <label asp-for="CategoryDTO.CategoryName" class="control-label"></label>
                <select class="form-control" asp-for="CategoryDTO.CategoryName" asp-items="@ViewBag.CategoryNames" disabled></select>
                <span asp-validation-for="CategoryDTO.CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDTO.Status" class="control-label"></label>
                <select class="form-control" asp-for="ProductDTO.Status" asp-items="@ViewBag.Status"></select>
                <span asp-validation-for="ProductDTO.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDTO.ProductPicture" class="control-label"></label>
                <input class="form-control" type="file" name="productPicture" />
            </div>

            @if (Model.ProductDTO.ID == 0)
            {
                <div class="form-group">
                    <input type="submit" value="Ürün Ekle" class="btn btn-primary mt-2" />
                </div>
            }
            else
            {
                <input type="hidden" asp-for="ProductDTO.ID" />

                <div class="form-group">
                    <input type="submit" value="Ürün Güncelle" class="btn btn-primary mt-2" />
                </div>
            }

            @* @if (Model != null)
        {
        <input type="hidden" asp-for="ID" />
        }*@

        }

        else
        {
            <input type="hidden" asp-for="ProductDTO.ID" />

            <div class="form-group">
                <span asp-validation-for="ProductDTO.ProductName"></span> <label style="width:100%;                                height:100%">@ViewBag.ProductNameDelete silmek istediğinizden emin misiniz ?</label>

            </div>

            <div class="form-group">
                <input type="submit" value="Ürün Sil" class="btn btn-primary mt-2" />
            </div>

            TempData["Deleted"] = "true";
        }

    </form>

</div>