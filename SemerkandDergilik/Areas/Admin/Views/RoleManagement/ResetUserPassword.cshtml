@model PasswordResetByAdminViewModel

@{
    ViewData["Title"] = "ResetUserPassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Üye şifre değiştirme</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetUserPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UserId" class="form-control" />

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label> <br />
                <input asp-for="UserName" class="form-control" disabled />
                @*<label asp-for="UserName" class="form-check-label">@Model.UserName</label>*@

            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" disabled />
                @*<label asp-for="Email" class="form-check-label">@Model.Email</label>*@
            </div> 

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Şifre değiştir" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Users">Back to List</a>
</div>