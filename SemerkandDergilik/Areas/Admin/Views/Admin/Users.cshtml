@model List<AppUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}


<h3>Üyeler</h3>
<hr />
<table class="table table-hover table-bordered table-striped table-responsive">

    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol Atama</td>
        <td>Şifre değiştirme</td>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur.</td>
        </tr>
    }
    else
    {

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td user-roles="@user.Id"></td> <!-- CustomTagHelper.UserRolesName.cs-->

                @* a tag helper'lar kullanıldığında akış get metodlarına olur*@
                <td> <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@user.Id">Role ata</a></td> 
                <td><a class="btn btn-success" asp-action="ResetUserPassword" asp-route-id="@user.Id">Şifre Yenileme</a></td>
            </tr>
        }

    }
</table>