@model CategoryVM

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}

<h2 style="color:red;">@TempData["mesaj"] </h2>



@if (Model.Categories.Count == 0)
{
    <div class="jumbotron" id="tab1">
        Kategori Eklemek icin
        @*<input type="submit" id="btnIslemYap" value="İşlem Yap" />*@

        <button class="btn btn-info " id="addNewCategory" value="addNewCategoryValue">tıklayınız</button>
    </div>
}
else
{
    <div class="jumbotron" id="tab1">
        Kategori Eklemek icin
        <button class="btn btn-info " id="addNewCategory" value="addNewCategoryValue">tıklayınız</button>
    </div>


    <div class="panel panel-primary">
        <div class="panel panel-body">
            <table class="table table-hover" id="tab2">
                <thead>
                    <tr>
                        <th>Kategori İsmi</th>
                        <th>Durum</th>
                        <th colspan="2" style="padding-left:150px" >Resim</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CategoryDTO item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.Status</td>
                            <td colspan="2" style="padding-left:150px">@item.CategoryPicture</td>
                            <td>
                                @*<a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a>*@
                                <button class="btn btn-warning " id="updateCategory" value="updateCategoryValue" data-id=@item.ID>Güncelle</button>
                            </td>
                            <td>
                                <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>
                                

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="modal fade" id="AddCategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body" id="AddCategory">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<script type="text/javascript">



    function AddCategoryModalLoaded() {
        $("#AddCategoryModal").modal('show'); // #MaintenanceRoomModal içinde MaintenanceRoom var (<div class="modal-body" id="MaintenanceRoom">) onun içinde de data var (_MaintenanceRoomPartial veya _UnMaintenanceRoomPartial)
    }

    $(function () {
        //$("#addNewCategory").click(function () {
        $("#tab1").on("click", "[value=addNewCategoryValue]", function () {
            $.ajax({
                //url: '@@Url.Action("AddCategoryAjax","Category")',
                url: 'AddCategoryAjax',
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#AddCategory").html(data);
                    AddCategoryModalLoaded();

                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });

    $(function () {
        //$("#addNewCategory").click(function () {
        $("#tab2").on("click", "[value=updateCategoryValue]", function () {
            $.ajax({
                //url: '@@Url.Action("AddCategoryAjax","Category")',
                url: 'UpdateCategoryAjax',
                data: { id: $(this).attr("data-id") },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#AddCategory").html(data);
                    AddCategoryModalLoaded();

                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });

