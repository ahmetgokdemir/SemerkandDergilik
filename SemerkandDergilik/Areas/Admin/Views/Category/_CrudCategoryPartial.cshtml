@{
}

@model CategoryDTO


@if ((Model == null) && ViewBag.CRUD != "delete_operation") // _CruProduction'da Model null değil çünkü AddProductAjax()'da geriye değer dönüyor ama AddCategoryAjax()'da dönmüyor Model null o yüzden..
{
    <h3>Kategori Oluşturma Formu</h3>
}
else if (Model.ID != 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Kategori Güncelleme Formu</h3>
}
else if (Model.ID != 0 && ViewBag.CRUD == "delete_operation")
{
    <h3>Kategori Silme Formu</h3>
}

<hr />
<div class="row">

    <form asp-action="CRUDCategory" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewBag.CRUD != "delete_operation")
            {
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>




                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select class="form-control" asp-for="Status" asp-items="@ViewBag.Status"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryPicture" class="control-label"></label>
                    <input class="form-control" type="file" name="categoryPicture" src="CategoryPicture" />
                </div>

                @if (Model == null)
                {
                    <div class="form-group">
                        <input type="submit" value="Kategori Ekle" class="btn btn-primary mt-2" />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <input type="submit" value="Kategori Güncelle" class="btn btn-primary mt-2" />
                    </div>
                }

                @if (Model != null)
                {
                    <input type="hidden" asp-for="ID" />
                }

            }

            else
            {
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                <span asp-validation-for="CategoryName"></span> <label style="width:100%; height:100%">@ViewBag.CategoryNameDelete silmek istediğinizden emin misiniz ?</label>
 
                </div>

                <div class="form-group">
                    <input type="submit" value="Kategori Sil" class="btn btn-primary mt-2" />
                </div>

                TempData["Deleted"] = "true";
            }

        </form>
   
</div>
