@model CategoryVM


@*@@if ((Model == null) && ViewBag.CRUD != "delete_operation") // _CruProduction'da Model null değil çünkü AddProductAjax()'da geriye değer dönüyor ama AddCategoryAjax()'da dönmüyor Model null o yüzden..
{
    <h3>Kategori Oluşturma Formu</h3>
}*@
@if (Model.CategoryDTO.Primary_ID == 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Kategori Oluşturma Formu</h3>
}
else if (Model.CategoryDTO.Primary_ID != 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Kategori Güncelleme Formu</h3>
}
else if (Model.CategoryDTO.Primary_ID != 0 && ViewBag.CRUD == "delete_operation")
{
    <h3>Kategori Silme Formu</h3>
}

<hr />
<div class="row">

    <form asp-action="CRUDCategory" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (ViewBag.CRUD != "delete_operation")
        {
            TempData["Deleted"] = null;  // delete pop-up sayfasını açıp sonra kapatıp sonra da update/add pop'ı seçilirse TempData["Deleted"] sıfırlanmadığından CRUDProduct kısmında delete operation çalışır bu yüzden bunu sıfırlamak lazım

            // asp-for="" kullanımında içerisine Model.CategoryDTO.CategoryName tanımlanamaz (Model olmamalı) yani CategoryDTO.CategoryName şeklinde olacak.. ViewBag de tanımlanamaz.. ama TempData kullanılabilir sanırım..

            <div class="form-group">
                <label asp-for="CategoryDTO.CategoryName" class="control-label"></label>
                <input asp-for="CategoryDTO.CategoryName" class="form-control" />
                <span asp-validation-for="CategoryDTO.CategoryName" class="text-danger"></span>
            </div>




@*            <div class="form-group">
                <label asp-for="CategoryDTO.Status" class="control-label"></label>
                <select class="form-control" asp-for="CategoryDTO.Status" asp-items="@ViewBag.Status"></select>
                <span asp-validation-for="CategoryDTO.Status" class="text-danger"></span>
            </div>*@

            
            <div class="form-group">
                <label asp-for="CategoryDTO.Status" class="control-label"></label>
                <select class="form-control" asp-for="CategoryDTO.Status" asp-items="Html.GetEnumSelectList<Semerkand_Dergilik.Enums.Status>()"></select>
                <span asp-validation-for="CategoryDTO.Status" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label asp-for="CategoryDTO.CategoryPicture" class="control-label"></label>
                <input class="form-control" type="file" name="categoryPicture" src="CategoryDTO.CategoryPicture" />
            </div>

            @if (Model.CategoryDTO.Primary_ID == 0)
            {
                <div class="form-group">
                    <input type="submit" value="Kategori Ekle" class="btn btn-primary mt-2" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Kategori Güncelle" class="btn btn-primary mt-2" />
                </div>
            }

            @if (Model.CategoryDTO.Primary_ID != 0)
            {
                <input type="hidden" asp-for="CategoryDTO.Primary_ID" />
            }

        }

        else
        {
            <input type="hidden" asp-for="CategoryDTO.Primary_ID" />

            <div class="form-group">
                <span asp-validation-for="CategoryDTO.CategoryName"></span> <label style="width:100%; height:100%">@ViewBag.CategoryNameDelete silmek istediğinizden emin misiniz ?</label>

            </div>

            <div class="form-group">
                <input type="submit" value="Kategori Sil" class="btn btn-primary mt-2" />
            </div>

            TempData["Deleted"] = "true";
        }

    </form>

</div>
