@model CategoryDTO


<h3>Kategori Oluşturma</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select class="form-control" asp-for="Status" asp-items="@ViewBag.Status"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
             <label asp-for="CategoryPicture"  class="control-label"></label>
            <input class="form-control" type="file" name="categoryPicture"   />
            </div>

            @if (Model == null)
            {
                <div class="form-group">
                    <input type="submit" value="Kategori Ekle" class="btn btn-primary mt-2" />
                </div>
            }
            else{
                <div class="form-group">
                    <input type="submit" value="Kategori Güncelle" class="btn btn-primary mt-2" />
                </div>
            }

            @if (Model != null)
            {
            <input type="hidden" asp-for="ID" />
            }

        </form>
    </div>
</div>
