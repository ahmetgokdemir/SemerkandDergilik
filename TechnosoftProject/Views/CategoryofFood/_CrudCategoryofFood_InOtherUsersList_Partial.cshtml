@model CategoryofFoodVM

@if (Model.CategoryofFoodDTO.ID != 0 && ViewBag.CRUD == "add_operation")
{
    <h3>Kategori Listesine Ekleme Formu</h3>
}

<hr />


<div class="row">

    <form asp-action="CRUDCategoryofFood_InOtherUsersList" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (ViewBag.CRUD == "add_operation")
        {
            <input type="hidden" asp-for="CategoryofFoodDTO.ID" />

            <div class="form-group">
                <span asp-validation-for="CategoryofFoodDTO.CategoryName_of_Foods"></span>
                <label style="width:100%; height:100%">@ViewBag.CategoryofFoodName_toMyList listenize eklensin mi ?</label>

            </div>

            <div class="form-group">
                <input type="submit" value="Kategoriyi Listeme Ekle" class="btn btn-primary mt-2" />
            </div>

            TempData["Added"] = "true";
        }

    </form>

</div>



