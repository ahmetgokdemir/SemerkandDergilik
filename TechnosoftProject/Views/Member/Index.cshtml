@model UserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<style>

    th, td 
    {
       /*  border: 1px solid green; */
        border-radius: 10px;
        /* //border-color: red; */
        border-style: groove;
        background-color: midnightblue;
    }
    table
    {
        /* border-style: groove; */
        border-color: darkgreen;
        /* border-radius: 10px; */
    }

    tr:nth-child(even) {
        background-color: red;
    }
</style>


<h3 class="text-md-start">Kullanıcı Bilgileri</h3>
<div class="row">
  <div class="col-sm-3">
         @*<img style="width:100%; height:100%" src="@Model.Picture" />*@
        @*<img style="width:100%;height:100%" src="~/userpicture/user.webp" />*@
        @if (!String.IsNullOrEmpty(Model.Picture))
        {
            <img style="width:100%; height:100%" src="@Model.Picture" />
        }
        else

        {
            <img style="width:100%;height:100%" src="~/userpicture/user.webp" />
        }
    </div>
    <div class="col-sm-9">

        <table class="table   ">
            @* table-bordered table-striped *@
            <tr>
                <th>Kullanıcı ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <th>Telefon no</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>City</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else

                    {
                        <span>belirtilmemiş</span>
                    }
                </td>
            </tr>
@*            <tr>
                <th>Doğum tarihi</th>
                <td>

                    @if (Model.BirthDay != null)
                    {
                        @Model.BirthDay?.ToShortDateString()
                    }
                    else

                    {
                        <span>belirtilmemiş</span>
                    }
                </td>
            </tr>*@

@*            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>*@
        </table>
    </div>
</div>