                            <a class="nav-link" asp-action="Index" asp-controller="Member">Üye Sayfası</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="navbar-nav">  
                            <a class="nav-link">@User.Identity.Name</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-link" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış</a>
                        </li>
                    </ul>
                }

                
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:10px;">

        @RenderBody()
    </div>

