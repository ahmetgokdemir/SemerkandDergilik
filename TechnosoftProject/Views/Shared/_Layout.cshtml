                    <ul class="navbar-nav ms-auto">

                        <li class="navbar-nav">
                            <a class="nav-link" asp-action="SignUp">Üye Ol</a>
                        </li>
                        <li class="navbar-nav">

                            <a class="nav-link" asp-action="LogIn">Giriş yap</a>
                        </li>
                    </ul>

                    <div class="dropdown" >
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="true">
