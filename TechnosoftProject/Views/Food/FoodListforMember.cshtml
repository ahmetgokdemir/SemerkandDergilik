    @Model.JavascriptToRun // yaptığı iş, içinde barındırdığı ShowErrorInsertOperationPopup veya ShowErrorUpdateOperationPopup fonksiyonu sayesinde, bu fonksiyonları çağırmak

        function ShowErrorInsertOperationPopup() {
            // alert('Sorry, we could not process your order.');

            $.ajax({
                //url: '@@Url.Action("AddFoodAjax","Food")',
                url: 'AddFoodAjax',
                //data: { pdto_reloaddata: @@Model.FoodDTO },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDFood").html(data);
                    CRUDFoodModalLoaded();

                },
                beforeSend: function () {
                    $('.loader').show(); // Assuming that you have some loader defined
                },
                complete: function () {
                    $('.loader').hide(); //Hide this loader
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });

        }

    function ShowErrorUpdateOperationPopup(_id) {
        // alert('Sorry, we could not process your order.'); , userID: "80bce695-114a-41d2-be48-08db91a3e366"

        $.ajax({
            //url: '@@Url.Action("AddFoodAjax","Food")',
            url: 'UpdateFoodAjax',
            data: { FoodID: _id },
            type: 'GET',
            dataType: 'html',
            success: function (data) {
                $("#CRUDFood").html(data);
                CRUDFoodModalLoaded();

            },
            beforeSend: function () {
                $('.loader').show(); // Assuming that you have some loader defined
            },
            complete: function () {
                $('.loader').hide(); //Hide this loader
            },
            error: function () {
                alert("Hata alındı.");
            }
        });

    }

    function CRUDFoodModalLoaded() {
        $("#CRUDFoodModal").modal('show'); // #CRUDFoodModal içinde CRUDFood var (<div class="modal-body" id="CRUDFood">) onun içinde de data var (_CrudFoodPartial)
    }


    $(function () {
        $("#tab1").on("click", "[value=addNewFoodValue]", function () {
            $.ajax({
                //url: '@@Url.Action("AddFoodAjax","Food")',
                url: 'AddFoodAjax',
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDFood").html(data);
                    CRUDFoodModalLoaded();

                },
                beforeSend: function () {
                    $('.loader').show(); // Assuming that you have some loader defined
                },
                complete: function () {
                    $('.loader').hide(); //Hide this loader
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });

    $(function () {

        $("#tab2").on("click", "[value=updateFoodValue]", function () {
            $.ajax({

                url: 'UpdateFoodAjax',
                data: { foodID: $(this).attr("data-FoodID") },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDFood").html(data);
                    CRUDFoodModalLoaded();

                },
                beforeSend: function () {
                    $("#LoadingFoodModal").modal('show');
                },
                complete: function () {
                    $("#LoadingFoodModal").modal('hide');

                    // $('.loader').hide(); //Hide this loader
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });


    $(function () {

        $("#tab2").on("click", "[value=deleteFoodValue]", function () {
            $.ajax({

                url: 'DeleteFoodAjax',
                data: { foodID: $(this).attr("data-FoodID") },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDFood").html(data);
                    CRUDFoodModalLoaded();

                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });

</script>
