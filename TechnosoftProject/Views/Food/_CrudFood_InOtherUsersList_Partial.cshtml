@model FoodVM

@if (Model.FoodDTO.ID != 0 && ViewBag.CRUD == "add_operation")
{
    <h3>Yemek Listesine Ekleme Formu</h3>
}

<hr />


<div class="row">

    <form asp-action="CRUDFood_InOtherUsersList" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (ViewBag.CRUD == "add_operation")
        {
            <input type="hidden" asp-for="FoodDTO.ID" />

            <div class="form-group">
                <span asp-validation-for="FoodDTO.Food_Name"></span>
                <label style="width:100%; height:100%">@ViewBag.FoodName_toMyList listenize eklensin mi ?</label>

            </div>

            <div class="form-group">
                <input type="submit" value="Yemek Listeme Eklensin" class="btn btn-primary mt-2" />
            </div>

            TempData["Added"] = "true";
        }

    </form>

</div>



