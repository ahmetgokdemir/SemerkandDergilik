@*<h4 style="color:red;">@TempData["mesaj"] </h4>*@

<div class="spinner-border loader" role="status">
    <span class="sr-only">Loading...</span>
</div>

<hr class="loader" />

@if (Model.ProductDTOs.Count == 0)
{
    <div class="jumbotron" id="tab1" style="padding:20px;  background-color:lightgrey">

        @* BURASIIII DEĞİLLLL <input type="submit" id="btnIslemYap" value="İşlem Yap" />*@

        <button class="btn btn-outline-success " id="addNewProduct" value="addNewProductValue">Ürün Eklemek için tıklayınız</button>
    </div>
}

else
{
    <div id="tab1" class="mb-3">

        <button class="btn btn-outline-success " id="addNewProduct" value="addNewProductValue"> Ürün Eklemek için tıklayınız</button>
    </div>

    <div class="panel panel-primary  ml-5">
        <div class="panel panel-body">
            <table class="table table-hover table-bordered table-responsive-xl" id="tab2">
                <thead class="thead-light">
                    <tr>
                        <th>Index</th>
                        <th class="position"><p>Ürün İsmi</p></th>
                        <th class="position"><p>Ürün Fiyat</p></th>
@*                        <th class="position"><p>Ürün Adet</p></th>
*@                        <th class="position"><p>İskonto</p></th>

                        @*<th>Kategori ID</th>*@
                        <th class="position"><p>Kategori Adı</p></th>

                        <th class="position"><p>Durum<p></th>
                        <th class="position"><p>Ürün Resim<p></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ProductDTO item in Model.ProductDTOs)
                    {
                        <tr>
                            <td></td> <!-- indexleme gelecek -->
                            <td class="position"><p>@item.ProductName</p></td>
                            <td class="position"><p>@item.UnitPrice</p></td>
                            @*<td class="position"><p>@item.UnitsInStock</p></td>*@
                            <td class="position"><p>@item.Discount</p></td>

                            @*<td>@item.CategoryID</td>*@
                            <td class="position"><p>@Model.CategoryDTO.CategoryName</p></td>

                            <td class="position"><p>@item.Status</p></td>
                            @*<td colspan="2" style="padding-left:150px">@item.CategoryPicture</td>*@
                            <td style="text-align: center;">
                                @if (item.ProductPicture != null)
                                {
                                    <img style="width:85px; height:50px" src="@item.ProductPicture" />
                                }                                
                            </td>
                            <td class="btnposition">
                                <a class="btn btn-warning" value="updateProductValue" data-id=@item.ID>Güncelle</a>
                                @* BURASIIII  <button class="btn btn-warning " id="updateCategory" value="updateCategoryValue" data-id=@item.ID>Güncelle</button>*@
                            </td>
                            <td class="btnposition">
                                @*<a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>*@

                                <button class="btn btn-danger " id="deleteProduct" value="deleteProductValue" data-id=@item.ID>Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


