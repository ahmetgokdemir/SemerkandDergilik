<style>
    .loader {
        display: none;
    }

    .position {
        width: 10%;
        position: relative;
    }

        .position p {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

    .btnposition {
        vertical-align: middle;
        text-align: center;
    }
