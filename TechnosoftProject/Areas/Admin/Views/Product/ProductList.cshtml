@if (TempData["messageProduct"] != null)
{
    @if (TempData["messageProduct"].ToString() == "Ürün güncellendi")
    {
        <script>
            alertify.warning("Ürün güncellendi");
        </script>
    }
    else if (TempData["messageProduct"].ToString() == "Ürün silindi")
    {
        <script>
            alertify.error("Ürün silindi");
        </script>
    }
    else if (TempData["messageProduct"].ToString() == "Ürün eklendi")
    {
        <script>
            alertify.success("Ürün eklendi");
        </script>
    }

}



<script>
    $(document).ready(function () {
        var t = $('#tab2').DataTable({

            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            },
            columnDefs: [
                {
                    searchable: false,
                    orderable: false,
                    targets: 0,
                },
            ],
            order: [[1, 'asc']],
            pagingType: 'full_numbers'

        });


        t.on('order.dt search.dt', function () {
            let i = 1;

            t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data(i++);
            });
        }).draw();



    });
</script>


<script type="text/javascript">




    @Model.JavascriptToRun

        function ShowErrorInsertOperationPopup() {
            // alert('Sorry, we could not process your order.');

            $.ajax({
                //url: '@@Url.Action("AddProductAjax","Product")',
                url: 'AddProductAjax',
                //data: { pdto_reloaddata: @@Model.ProductDTO },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDProduct").html(data);
                    CRUDProductModalLoaded();

                },
                beforeSend: function () {
                    $('.loader').show(); // Assuming that you have some loader defined
                },
                complete: function () {
                    $('.loader').hide(); //Hide this loader
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });

        }

    function ShowErrorUpdateOperationPopup(_id) {
        // alert('Sorry, we could not process your order.');

        $.ajax({
            //url: '@@Url.Action("AddProductAjax","Product")',
            url: 'UpdateProductAjax',
            data: { id: _id },
            type: 'GET',
            dataType: 'html',
            success: function (data) {
                $("#CRUDProduct").html(data);
                CRUDProductModalLoaded();

            },
            beforeSend: function () {
                $('.loader').show(); // Assuming that you have some loader defined
            },
            complete: function () {
                $('.loader').hide(); //Hide this loader
            },
            error: function () {
                alert("Hata alındı.");
            }
        });

    }



    function CRUDProductModalLoaded() {
        $("#CRUDProductModal").modal('show'); // #CRUDProductModal içinde CRUDProduct var (<div class="modal-body" id="CRUDProduct">) onun içinde de data var (_CrudProductPartial)
    }


    $(function () {
        //$("#addNewProduct").click(function () {
        $("#tab1").on("click", "[value=addNewProductValue]", function () {
            $.ajax({
                //url: '@@Url.Action("AddProductAjax","Product")',
                url: 'AddProductAjax',
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDProduct").html(data);
                    CRUDProductModalLoaded();

                },
                beforeSend: function () {
                    $('.loader').show(); // Assuming that you have some loader defined
                },
                complete: function () {
                    $('.loader').hide(); //Hide this loader
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });

    $(function () {
        //$("#updateProduct").click(function () {
        $("#tab2").on("click", "[value=updateProductValue]", function () {
            $.ajax({
                //url: '@@Url.Action("UpdateProductAjax","Product")',
                url: 'UpdateProductAjax',
                data: { id: $(this).attr("data-id") },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDProduct").html(data);
                    CRUDProductModalLoaded();

                },
                beforeSend: function () {
                    $("#LoadingCategoryModal").modal('show');
                },
                complete: function () {
                    $("#LoadingCategoryModal").modal('hide');

                    // $('.loader').hide(); //Hide this loader
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });

    $(function () {
        //$("#deleteProduct").click(function () {
        $("#tab2").on("click", "[value=deleteProductValue]", function () {
            $.ajax({
                //url: '@@Url.Action("DeleteProductAjax","Product")',
                url: 'DeleteProductAjax',
                data: { id: $(this).attr("data-id") },
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $("#CRUDProduct").html(data);
                    CRUDProductModalLoaded();

                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });


</script>



















