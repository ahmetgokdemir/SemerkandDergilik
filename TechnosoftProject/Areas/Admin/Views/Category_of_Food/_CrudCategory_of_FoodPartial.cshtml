@model Category_of_FoodVM


@*@@if ((Model == null) && ViewBag.CRUD != "delete_operation") // _CruProduction'da Model null değil çünkü AddProductAjax()'da geriye değer dönüyor ama AddCategory_of_FoodAjax()'da dönmüyor Model null o yüzden..
{
    <h3>Kategori Oluşturma Formu</h3>
}*@
@if (Model.Category_of_FoodDTO.ID == 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Kategori Oluşturma Formu</h3>
}
else if (Model.Category_of_FoodDTO.ID != 0 && ViewBag.CRUD != "delete_operation")
{
    <h3>Kategori Güncelleme Formu</h3>
}
else if (Model.Category_of_FoodDTO.ID != 0 && ViewBag.CRUD == "delete_operation")
{
    <h3>Kategori Silme Formu</h3>
}

<hr />
<div class="row">

    <form asp-action="CRUDCategory_of_Food" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (ViewBag.CRUD != "delete_operation")
        {
            TempData["Deleted"] = null;  // delete pop-up sayfasını açıp sonra kapatıp sonra da update/add pop'ı seçilirse TempData["Deleted"] sıfırlanmadığından CRUDProduct action kısmında delete operation çalışır bu yüzden bunu sıfırlamak lazım

            // asp-for="" kullanımında içerisine Model.Category_of_FoodDTO.Category_of_FoodName tanımlanamaz (Model olmamalı) yani Category_of_FoodDTO.Category_of_FoodName şeklinde olacak.. ViewBag de tanımlanamaz.. ama TempData kullanılabilir sanırım..

            <div class="form-group">
                <label asp-for="Category_of_FoodDTO.Category_of_FoodName" class="control-label"></label>
                <input asp-for="Category_of_FoodDTO.Category_of_FoodName" class="form-control" />
                <span asp-validation-for="Category_of_FoodDTO.Category_of_FoodName" class="text-danger"></span>
            </div>




@*            <div class="form-group">
                <label asp-for="Category_of_FoodDTO.Status" class="control-label"></label>
                <select class="form-control" asp-for="Category_of_FoodDTO.Status" asp-items="@ViewBag.Status"></select>
                <span asp-validation-for="Category_of_FoodDTO.Status" class="text-danger"></span>
            </div>*@

            
            <div class="form-group">
                <label asp-for="Category_of_FoodDTO.Status" class="control-label"></label>
                <select class="form-control" asp-for="Category_of_FoodDTO.Status" asp-items="Html.GetEnumSelectList<Technosoft_Project.Enums.Status>()"></select>
                <span asp-validation-for="Category_of_FoodDTO.Status" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label asp-for="Category_of_FoodDTO.Category_of_FoodPicture" class="control-label"></label>
                <input class="form-control" type="file" name="Category_of_FoodPicture" src="Category_of_FoodDTO.Category_of_FoodPicture" />
            </div>

            @if (Model.Category_of_FoodDTO.ID== 0)
            {
                <div class="form-group">
                    <input type="submit" value="Kategori Ekle" class="btn btn-primary mt-2" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Kategori Güncelle" class="btn btn-primary mt-2" />
                </div>
            }

            @if (Model.Category_of_FoodDTO.ID != 0)
            {
                <input type="hidden" asp-for="Category_of_FoodDTO.ID" />
            }

        }

        else
        {
            <input type="hidden" asp-for="Category_of_FoodDTO.ID" />

            <div class="form-group">
                <span asp-validation-for="Category_of_FoodDTO.Category_of_FoodName"></span> <label style="width:100%; height:100%">@ViewBag.Category_of_FoodNameDelete silmek istediğinizden emin misiniz ?</label>

            </div>

            <div class="form-group">
                <input type="submit" value="Kategori Sil" class="btn btn-primary mt-2" />
            </div>

            TempData["Deleted"] = "true";
        }

    </form>

</div>
